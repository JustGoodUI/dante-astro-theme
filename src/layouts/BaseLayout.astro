---
import { ViewTransitions } from 'astro:transitions';
import BaseHead, { type Props as HeadProps } from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';

export type Props = HeadProps & { showHeader?: boolean };

const { showHeader = true, ...head } = Astro.props;
const { bg } = Astro.props
---

<!doctype html>
<html lang="en" class="antialiased break-words">
    <head>
        <script defer data-domain="manonjacquin.com" src="https://plausible.io/js/script.local.js"></script>
        <BaseHead {...head} />
        <ViewTransitions />
    </head>
    <body class={bg ? "bg-gradient-to-r from-blue-800 from-10% via-pink-700 to-yellow-600 h-screen w-full text-main" : "bg-indigo-900 h-screen w-full text-main"}>
        <div class="flex flex-col min-h-screen px-4 md:px-8">
            <Nav />
            {showHeader && <Header />}
            <main class="grow w-full max-w-6xl mx-auto">
                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>


